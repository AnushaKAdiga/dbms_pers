{{#if removedUser}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  Event has been removed.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6">
    <h1>Event Organisation</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/add-event" type="button" class="btn btn-primary align-self-center">+ Add</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Event  Name</th>
      <th scope="col">Event_head_id</th>
      <th scope="col">Venue</th>
     <th scope="col">Date</th>

     
     <!--- <th scope="col">Count</th>a-->
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
       
    
      <th scope="row">{{this.Event_ID}}</th>
      <td>{{this.Event_Name}}</td>
      <td>{{this.Event_head_id}}</td>
      <td>{{this.Venue}}</td>
      
      <td>{{this.Date}}</td>
       

      <td class="text-end">
        <a href="/view-event/{{this.Event_ID}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
        <a href="/edit-event/{{this.Event_ID}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a>
        <a href="/{{this.Event_ID}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>