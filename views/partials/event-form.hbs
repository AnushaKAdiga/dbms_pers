 <div class="col-6">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" value="{{this.Event_Name}}" placeholder="Event_Name" name="Event_Name">
      <label for="floatingInput">Event_Name</label>
    </div>
  </div>
  
  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="number" class="form-control" id="floatingInput" value="{{this.Event_head_id}}" placeholder="Event_head_id" name="Event_head_id">
      <label for="floatingInput">Event_head_id</label>
    </div>
  </div>
  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" value="{{this.Venue}}" placeholder="Venue" name="Venue">
      <label for="floatingInput">Venue</label>
    </div>
  </div>
  
  
  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="date" class="form-control" id="Date" value="{{this.Date}}" placeholder="Date" name="Date">
      <label for="Date">Date</label>
    </div>
  </div>

  <div class="col-12">
    <div class="form-floating mb-3">
      <textarea class="form-control" placeholder="Leave a description here" id="description" name="description" style="height: 200px">{{this.description}}</textarea>
      <label for="comments">Description</label>
     
    </div>
    
  </div>
  <div class="col-12 d-grid">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>